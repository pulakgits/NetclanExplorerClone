<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0" /> <!-- Background color -->
            <corners android:radius="14dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Progress shape -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/navyBlue" /> <!-- Progress color -->
                <corners android:radius="14dp" /> <!-- Corner radius -->
            </shape>
        </clip>
    </item>
</layer-list>